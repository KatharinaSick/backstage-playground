{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": ["nodejs@22"],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true"
  },
  "shell": {
    "init_hook": [
      "yarn install",
      "echo 'Have fun with Backstage! \uD83D\uDE80'"
    ],
    "scripts": {
      "backstage": "yarn dev",
      "frontend": "yarn start",
      "backend": "yarn start-backend"
    }
  }
}
